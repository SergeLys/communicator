<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GraphicParameters">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/up_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/type_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_size_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/type_size"
                        android:textSize="20sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/text_size_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_size_view"
                        android:valueFrom="10"
                        android:valueTo="30" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frame_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/type_size">

                    <TextView
                        android:id="@+id/frame_size_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/frame_size"
                        android:textSize="20sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/frame_size_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/frame_size_view"
                        android:valueFrom="0"
                        android:valueTo="30" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/text_place_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frame_size"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/text_place"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_place_view"
                    android:layout_marginStart="40dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/up_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/up_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/up_place" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/up"
                    android:layout_marginStart="40dp">

                    <CheckBox
                        android:id="@+id/bottom_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/bottom_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bottom_text" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@id/choose_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/down"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/text_color_button"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/text_colour_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/choose_color"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/materialcolorpicker__black"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/border_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_colour_btn"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/border_color_button"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/border_color_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/border_colour"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/materialcolorpicker__black"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border_color_button"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/card_image"
                    android:textSize="20sp" />


                <RelativeLayout
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_text"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/image_file_button"
                        style="@style/PrimaryActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_folder_black_24dp"
                        app:fabSize="mini"
                        app:tint="#FFFFFF" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/image_camera_button"
                        style="@style/PrimaryActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/image_file_button"
                        android:src="@drawable/ic_photo_camera_black_24dp"
                        app:fabSize="mini"
                        app:tint="#FFFFFF" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/up_block">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/back_button"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true">
            </com.google.android.material.button.MaterialButton>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>