<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity">

    <TextView
        android:id="@+id/page_list_text"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/pages_list_text"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/page_list"
        android:layout_below="@+id/page_list_text"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_border"
        android:layout_above="@id/new_page_button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/new_page_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/new_page_button"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">
    </com.google.android.material.button.MaterialButton>

</RelativeLayout>