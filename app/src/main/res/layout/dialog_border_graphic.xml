<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/frame_size"
        android:layout_below="@+id/type_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/frame_size_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frame_size"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/frame_size_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="20"
            android:layout_below="@id/frame_size_view"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/border_colour"
        android:layout_below="@+id/text_colour_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/border_color_button"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"/>

    <LinearLayout
        android:id="@+id/border_color_button"
        android:layout_below="@+id/border_colour"
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:orientation="horizontal"
        android:background="@color/materialcolorpicker__black"/>

</LinearLayout>